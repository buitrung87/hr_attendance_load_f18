            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="hr_attendance_rule_manager_team" model="ir.rule">
            <field name="name">HR Attendance: Manager Department Tree</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">['|', ('employee_id.department_id', 'child_of', user.employee_id.department_id.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_attendance_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- HR Employee Rules (extend existing) -->
        <record id="hr_employee_rule_attendance_user" model="ir.rule">
            <field name="name">HR Employee: Attendance User Access</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_attendance_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="hr_employee_rule_attendance_manager" model="ir.rule">
            <field name="name">HR Employee: Manager Department Tree</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">['|', ('department_id', 'child_of', user.employee_id.department_id.id), ('parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_attendance_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- HR Employee Rules for Attendance Administrator: full access within allowed companies -->
        <record id="hr_employee_rule_attendance_admin" model="ir.rule">
            <field name="name">HR Employee: Attendance Admin All (Companies)</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_attendance_admin'))]"/>
            <field name="perm_read" eval="True"/>
