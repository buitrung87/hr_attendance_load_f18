<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Attendance Device Tree View -->
        <record id="view_attendance_device_tree" model="ir.ui.view">
            <field name="name">attendance.device.tree</field>
            <field name="model">attendance.device</field>
            <field name="arch" type="xml">
                <list string="Attendance Devices">
                    <field name="name"/>
                    <field name="ip_address"/>
                    <field name="port"/>
                    <field name="active"/>
                    <field name="auto_pull"/>
                    <field name="last_log_timestamp"/>
                    <field name="last_pull_success"/>
                </list>
            </field>
        </record>

        <!-- Attendance Device Form View -->
        <record id="view_attendance_device_form" model="ir.ui.view">
            <field name="name">attendance.device.form</field>
            <field name="model">attendance.device</field>
            <field name="arch" type="xml">
                <form string="Attendance Device">
                    <header>
                        <button name="action_pull_attendance" string="Pull Now" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Connection">
                                <field name="name"/>
                                <field name="ip_address"/>
                                <field name="port"/>
                                <field name="comm_key" password="True"/>
                                <field name="active"/>
                                <field name="auto_pull"/>
                                <field name="timezone"/>
                            </group>
                            <group string="Status">
                                <field name="last_log_timestamp"/>
                                <field name="last_pull_success"/>
                                <field name="last_error_message"/>
                            </group>
                        </group>
                        <group string="Khoảng thời gian Pull">
                            <group>
                                <field name="pull_start"/>
                                <field name="pull_end"/>
                            </group>
                            <p class="o_form_label">Chọn khoảng thời gian tải log trước khi bấm 'Pull Now'. Thời gian hiển thị theo múi giờ người dùng, lưu trữ dưới dạng UTC.</p>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Attendance Device Action -->
        <record id="action_attendance_device" model="ir.actions.act_window">
            <field name="name">Attendance Devices</field>
            <field name="res_model">attendance.device</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_attendance_devices"
                  name="Devices"
                  parent="menu_attendance_enhanced_root"
                  action="action_attendance_device"
                  sequence="70"
                  groups="hr_attendance_load_f18.group_attendance_manager,hr_attendance_load_f18.group_attendance_admin"/>

    </data>
</odoo>