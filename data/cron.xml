<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Auto Import Attendance from F18 -->
        <record id="cron_auto_import_attendance" model="ir.cron">
            <field name="name">Auto Import Attendance from F18</field>
            <field name="model_id" ref="model_attendance_import"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_import()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=6, minute=0, second=0)"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">5</field>
        </record>

        <!-- Cron Job: Calculate Daily Overtime -->
        <record id="cron_calculate_overtime" model="ir.cron">
            <field name="name">Calculate Daily Overtime</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="state">code</field>
            <field name="code">model.cron_calculate_overtime()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=23, minute=30, second=0)"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">10</field>
        </record>

        <!-- Cron Job: Process Leave Deductions -->
        <record id="cron_process_leave_deductions" model="ir.cron">
            <field name="name">Process Daily Leave Deductions</field>
            <field name="model_id" ref="model_leave_deduction"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_deductions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=23, minute=45, second=0)"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">15</field>
        </record>

