<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron: Auto update all leave summaries daily -->
    <record id="ir_cron_update_leave_summaries" model="ir.cron">
        <field name="name">Update Leave Summaries</field>
        <field name="model_id" ref="hr_attendance_load_f18.model_leave_summary"/>
        <field name="state">code</field>
        <field name="code"><![CDATA[
model.sudo().update_all_summaries()
]]></field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>